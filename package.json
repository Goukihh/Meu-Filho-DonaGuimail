{
  "name": "meu-filho",
  "version": "1.2.4",
  "description": "Um cliente Discord para múltiplas contas com mascaramento avançado de navegador.",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "build": "electron-builder --win --publish never",
    "build:portable": "electron-builder --win portable --publish never",
    "build:installer": "electron-builder --win nsis --publish never",
    "build:single": "electron-builder --win nsis --publish never",
    "build:publish": "electron-builder --win nsis --publish always",
    "build:release": "electron-builder --win nsis --publish always"
  },
  "keywords": [
    "discord",
    "multi-account",
    "electron"
  ],
  "author": "Goukihh",
  "license": "MIT",
  "dependencies": {
    "user-agents": "^1.1.667"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.goukihh.meufilho",
    "productName": "Meu Filho",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "publish": {
      "provider": "github",
      "owner": "Goukihh",
      "repo": "Meu-Filho-DonaGuimail"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.png",
      "artifactName": "Meu Filho Setup ${version}.exe"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Meu Filho",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "menuCategory": "Social",
      "displayLanguageSelector": false,
      "language": "1033"
    }
  }
}